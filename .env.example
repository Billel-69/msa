# Environment configuration for MSA Platform
# Copy this file to .env and update with your actual values

# Node Environment
NODE_ENV=development

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=msa_db
DB_USER=msa_user
DB_PASS=msa_password
MYSQL_ROOT_PASSWORD=root_password

# MongoDB Configuration
MONGO_DB_NAME=msa_mongo
MONGO_PORT=27017
MONGODB_URI=mongodb://mongodb:27017/msa_mongo

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Backend Configuration
BACKEND_PORT=5000
JWT_SECRET=your_super_secret_jwt_key_change_this

# Frontend Configuration
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# OpenAI Configuration (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Agora Configuration (required for live features)
REACT_APP_AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# RAG Service Configuration (optional)
RAG_PORT=8000

# Production URLs (update for production)
# REACT_APP_API_URL=https://api.yourdomain.com
# REACT_APP_SOCKET_URL=https://api.yourdomain.com