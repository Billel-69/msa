# =================================================================
# CONFIGURATION BACKEND MSA - EXEMPLE
# =================================================================
# Copiez ce fichier vers .env et remplissez avec vos valeurs
# NE JAMAIS commiter le fichier .env réel avec des vraies clés!
# =================================================================

# =================================================================
# BASE DE DONNÉES MYSQL
# =================================================================
DB_HOST=localhost
DB_USER=msa_user
DB_PASSWORD=VotreMot2PasseSecurise123!
DB_NAME=msa_db
DB_PORT=3306

# =================================================================
# SÉCURITÉ ET AUTHENTIFICATION
# =================================================================
# Générez une clé secrète unique: openssl rand -base64 32
JWT_SECRET=VotreCleSecreteTresLongueEtComplexe123456789
JWT_EXPIRES_IN=7d

# Salt rounds pour bcrypt (10-12 recommandé pour production)
BCRYPT_ROUNDS=12

# =================================================================
# SERVEUR
# =================================================================
NODE_ENV=production
PORT=5000

# IP d'écoute (0.0.0.0 pour écouter sur toutes les interfaces)
HOST=0.0.0.0

# =================================================================
# OPENAI / SENS AI
# =================================================================
# Clé API OpenAI (obtenir sur: https://platform.openai.com/)
OPENAI_API_KEY=sk-votre_cle_openai_ici

# ID de l'assistant OpenAI (créer sur: https://platform.openai.com/assistants)
ASSISTANT_ID=asst_votre_assistant_id_ici

# =================================================================
# UPLOADS ET FICHIERS
# =================================================================
# Chemin pour stocker les fichiers uploadés
UPLOAD_PATH=/var/www/msa-app/uploads

# Taille maximale des fichiers (en MB)
MAX_FILE_SIZE=50

# Types de fichiers autorisés (séparés par des virgules)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# =================================================================
# EMAIL (OPTIONNEL)
# =================================================================
# Configuration SMTP pour l'envoi d'emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre.email@gmail.com
SMTP_PASS=votre_mot_de_passe_app
SMTP_FROM=noreply@votre-domaine.com

# =================================================================
# REDIS (OPTIONNEL - pour sessions et cache)
# =================================================================
# Si vous utilisez Redis pour les sessions
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================================================
# CORS ET SÉCURITÉ
# =================================================================
# Domaines autorisés pour CORS (séparés par des virgules)
ALLOWED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com

# Mode debug (true/false)
DEBUG=false

# =================================================================
# LOGS
# =================================================================
# Niveau de log (error, warn, info, debug)
LOG_LEVEL=info

# Chemin des logs
LOG_PATH=/var/www/msa-app/logs

# =================================================================
# WEBSOCKET / SOCKET.IO
# =================================================================
# Configuration pour les connexions temps réel
SOCKET_CORS_ORIGIN=https://votre-domaine.com

# =================================================================
# WEBRTC (POUR LE STREAMING VIDÉO)
# =================================================================
# Serveurs STUN/TURN pour WebRTC
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=
TURN_USERNAME=
TURN_PASSWORD=

# =================================================================
# MONITORING ET MÉTRIQUES
# =================================================================
# Activer les métriques Prometheus (true/false)
ENABLE_METRICS=false

# Port pour les métriques
METRICS_PORT=9090

# =================================================================
# RATE LIMITING
# =================================================================
# Limite de requêtes par IP (par minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# =================================================================
# EXEMPLE DE VALEURS POUR DÉVELOPPEMENT LOCAL
# =================================================================
# Décommentez ces lignes pour le développement local:
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=
# DB_NAME=msa_dev
# NODE_ENV=development
# PORT=5000
# ALLOWED_ORIGINS=http://localhost:3000
# DEBUG=true